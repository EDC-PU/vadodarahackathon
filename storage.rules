rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read for hackathon documents like brochures or problem statements
    match /public/{document=**} {
      allow read: if true;
      allow write: if get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'; // Only admins can upload public files
    }

    // Allow authenticated users to upload their profile pictures
    match /user-profiles/{userId}/{fileName} {
      allow read: if request.auth != null; // Allow any logged-in user to see profile pics
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow team leaders to upload team-specific files (e.g., project submissions)
    match /team-submissions/{teamId}/{fileName} {
       allow read: if request.auth != null && (get(/databases/(default)/documents/teams/$(teamId)).data.leader.uid == request.auth.uid || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
       allow write: if request.auth != null && get(/databases/(default)/documents/teams/$(teamId)).data.leader.uid == request.auth.uid;
    }
  }
}